@model IEnumerable<WardrobeMVC.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Outfits</h2>

@*CREATE NEW OUTFITS*@
<p class="new-item">
    <button type="button" class="btn btn-info create-new" onclick="location.href='@Url.Action("Create", "Outfits")'">New Outfit</button>
</p>

@*ROW CONTAINING OUTFITS INFORMATION*@
<div class="row">
    @*LOOP THAT IS ABLE TO HANDLE NEW OUTFIT ADDITIONS*@
    @foreach (var item in Model)
    {
        @*OUTFITS*@
        <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row outfit-items">
                        <div class="col-md-12">
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <img src="@Html.DisplayFor(modelItem => item.Top.TopImage)" class="img-responsive topImage" />
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                <img src="@Html.DisplayFor(modelItem => item.Accessory.AccessoryImage)" class="img-responsive accessoryImage" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <img src="@Html.DisplayFor(modelItem => item.Bottom.BottomImage)" class="img-responsive bottomImage" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <img src="@Html.DisplayFor(modelItem => item.Sho.ShoeImage)" class="img-responsive accessoryImage" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 buttons">
                            @*BUTTONS FOR DETAILS AND EDIT*@
                            <p>@Html.ActionLink("Details", "Details", new { id = item.OutfitID }, new { @class = "btn btn-info index", role = "button" })</p>
                            <p>@Html.ActionLink("Edit", "Edit", new { id = item.OutfitID }, new { @class = "btn btn-info index", role = "button" })</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

