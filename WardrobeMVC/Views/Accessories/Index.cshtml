@model IEnumerable<WardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>Accessories</h2>

@*CREATE NEW ACCESSORIES*@
<p class="new-item">
    <button type="button" class="btn btn-info create-new" onclick="location.href='@Url.Action("Create", "Accessories")'">New Accessory</button>
</p>

@*ROW CONTAINING ACCESSORIES INFORMATION*@
<div class="row">
    @*LOOP THAT IS ABLE TO HANDLE NEW ACCESSORIES ADDITIONS*@
    @foreach (var item in Model)
    {
        @*BOTTOMS*@
        <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>@Html.DisplayFor(modelItem => item.AccessoryName)</h4>
                            <p><img src="@Html.DisplayFor(modelItem => item.AccessoryImage)" class="img-responsive image" /></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Occasion:&nbsp;<span>@Html.DisplayFor(modelItem => item.Occasion.OccasionName)</span></p>
                            <p>Season:&nbsp;<span>@Html.DisplayFor(modelItem => item.Season.SeasonName)</span></p>
                        </div>
                        <div class="col-md-6">
                            @*BUTTONS FOR DETAILS AND EDIT*@
                            <p>@Html.ActionLink("Details", "Details", new { id = item.AccessoryID }, new { @class = "btn btn-info", role = "button" })</p>
                            <p>@Html.ActionLink("Edit", "Edit", new { id = item.AccessoryID }, new { @class = "btn btn-info", role = "button" })</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

